@{
    ViewBag.Title = "ProfilePage";
}

@using MvcApplication1.Models;

@model User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
    <link href="~/Content/Menubar.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div class="menu">
            <ul>
                <li><a href="~/Home/HomePage">Home</a></li>
                <br>
                <li class="active"><a href="~/Home/ProfilePage">Profile</a></li>
                <br>
                <li><a href="~/Home/Notifications">Notifications</a></li>
                <br>
                <li><a href="~/Home/Messages">Messages</a></li>
                <br>
                <li><a href="~/Home/Settings">Settings</a></li>
                <br>
                <li><a href="~/Home/LogOut">Logout</a></li>
                <br>
            </ul>
        </div>
    </header>
    <div>

        <table border="1">
            <thead><tr><td>Username</td><td>Password</td><td>Display Pic</td><td>First Name</td><td>Last Name</td><td>Gender</td><td>DOB</td><td>Email</td><td>Country</td><td>Status</td></tr></thead>

            @*@foreach (User user in Model)*@
            @{User user = (User)Model;
                //{
                <tr>
                    <td>@user.username</td>
                    <td>@user.password</td>
                    <td>@user.display_pic</td>
                    <td>@user.first_name</td>
                    <td>@user.last_name</td>
                    <td>@user.gender</td>
                    <td>@user.DOB</td>
                    <td>@user.email</td>
                    <td>@user.country</td>
                    <td>@user.status</td>
                </tr>
            }

        </table>
        <br>
        <input type="button" id="logOut_button" onclick="location.href='~/Home/LogOut'" value="Logout">


    </div>
</body>
</html>